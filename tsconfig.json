{
	"compilerOptions": {
	  "module": "esnext",
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "target": "es6",
	  "noImplicitAny": true,
	  "moduleResolution": "node",
	  "declaration": true,
	  "declarationMap": true,
	  "resolveJsonModule": true,
	  "skipLibCheck": true,
	  "sourceMap": true,
	  "outDir": "dist",
	  "rootDir": "./src",
	  "typeRoots": ["node_modules/@types"],
	  "baseUrl": ".",
	  "paths": {
		"*": ["node_modules/*", "src/types/*"]
	  }
	},
	"include": ["src/**/*"],
	"exclude": ["examples/", "tests"]
  }